pipeline {
    agent any

    parameters {
        string(name: 'BUILD_NUMBER', defaultValue: '', description: 'Número de versión')
    }

    environment {
        BRANCH_NAME = "${GIT_BRANCH.split("/")[1]}"
    }

    stages {
        stage('Despliegue') {
            steps {
                echo "El número de versión es: ${params.BUILD_NUMBER}"
            }
        }
        stage('Detener Contenedores Docker') {
            steps {
                bat 'FOR /f "tokens=*" %%i IN (\'docker ps -q\') DO docker stop %%i'
            }
        }
        stage('Construir Imagen Docker') {
            steps {
                bat "docker build -t store-${BRANCH_NAME}:1.0.0-${params.BUILD_NUMBER} ."
            }
        }
        stage('Desplegar Imagen Docker') {
            steps {
                bat "docker run -d -p 80:80 --name store-1.0.0-${params.BUILD_NUMBER} store-${BRANCH_NAME}:1.0.0-${params.BUILD_NUMBER}"
            }
        }
    }

    post {
        success {
            echo '¡El segundo pipeline se ha completado exitosamente! Contenedor ejecutandose'
        }
        failure {
            echo 'El segundo pipeline ha fallado!'
        }
    }
}