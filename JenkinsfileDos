pipeline {
    agent any

    parameters {
        string(name: 'BUILD_NUMBER', defaultValue: '', description: 'Número de versión')
    }

    environment {
        BRANCH_NAME = "${GIT_BRANCH.split("/")[1]}"
        buildNumber = "${params.BUILD_NUMBER}"
        buildNumberWithoutQuotes = buildNumber.replace("'", "")
    }

    stages {
        stage('Construir Imagen') {
            steps {
                bat "docker build -t store-backend-${BRANCH_NAME}:1.0.0-${buildNumberWithoutQuotes} ."
            }
        }
        stage('Desplegar Imagen') {
            steps {
                bat "docker run -d -p 8082:80 --name store-backend-1.0.0-${buildNumberWithoutQuotes} store-backend-${BRANCH_NAME}:1.0.0-${buildNumberWithoutQuotes}"
            }
        }
    }

    post {
        success {
            echo '¡El segundo pipeline se ha completado exitosamente!'
        }
        failure {
            echo 'El segundo pipeline ha fallado!'
        }
    }
}